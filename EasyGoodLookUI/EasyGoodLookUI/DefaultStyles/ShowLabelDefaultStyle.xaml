<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EasyGoodLookUI">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/EasyGoodLookUI;component/Themes/ShowLabel.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="local:ShowLabel" BasedOn="{StaticResource ShowLabelBase}">
        <Setter Property="NameStr" Value="name"></Setter>
        <Setter Property="ValueStr" Value="value"></Setter>
        <Setter Property="BorderColor" Value="Lime"></Setter>
        <Setter Property="NameWidth" Value="1*"></Setter>
        <Setter Property="ValueWidth" Value="2*"></Setter>
        <Setter Property="UtiWidth" Value="1*"></Setter>
    </Style>

</ResourceDictionary>