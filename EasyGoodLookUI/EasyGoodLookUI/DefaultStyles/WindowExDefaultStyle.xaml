<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EasyGoodLookUI">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/EasyGoodLookUI;component/Themes/WindowEx.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="local:WindowEx" BasedOn="{StaticResource WindowExStyleBase}">
        <Setter Property="MainHeaderHeight" Value="30"></Setter>
        <Setter Property="SubHeaderHeight" Value="20"></Setter>
        <Setter Property="IconAreaWidth" Value="50"></Setter>
        <Setter Property="TitleBackground" Value="Black"></Setter>
        <Setter Property="FootBarHeight" Value="20"></Setter>
    </Style>
</ResourceDictionary>